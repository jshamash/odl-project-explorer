# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.FeaturesController.all
GET     /download	                controllers.DownloadController.download
GET     /features/:feature           controllers.FeaturesController.details(feature: String)
GET     /features                   controllers.FeaturesController.all
GET     /projects/:project/features controllers.FeaturesController.project(project: String)
POST    /download                   controllers.DownloadController.selectFeatures

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
